{
  "name": "friendly-notebook-backend",
  "version": "1.0.0",
  "description": "Backend for Friendly Notebook",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed-knowledge": "node seedKnowledge.js",
    "seed-specialized": "node seedSpecializedKnowledge.js",
    "seed-btech": "node seedBtechKnowledge.js",
    "seed-fast": "node seedFastKnowledge.js",
    "seed-training": "node seedTrainingData.js",
    "test-fast": "node testFastResponse.js",
    "test-chat": "node testChatResponse.js",
    "test-training": "node testLLMTraining.js",
    "test-power": "node testPowerResponseSimple.js",
    "test-nonstop": "node testNonstopSimple.js",
    "test-advanced": "node testAdvancedResponse.js",
    "test-fixed-fast": "node testFixedFastResponse.js",
    "test-dashboard": "node testDashboardResponse.js",
    "test-enhanced": "node testEnhancedDashboard.js",
    "chat-interactive": "node testChatResponse.js --interactive",
    "demo-responses": "node demoChatResponses.js",
    "demo-interactive": "node demoChatResponses.js --interactive",
    "training-interactive": "node testLLMTraining.js --interactive",
    "power-interactive": "node testPowerResponseSimple.js --interactive",
    "nonstop-interactive": "node testNonstopSimple.js --interactive",
    "advanced-interactive": "node testAdvancedResponse.js --interactive",
    "fixed-fast-interactive": "node testFixedFastResponse.js --interactive",
    "dashboard-interactive": "node testDashboardResponse.js --interactive",
    "enhanced-interactive": "node testEnhancedDashboard.js --interactive",
    "start-ollama": "node startOllama.js",
    "health": "node -e \"require('http').get('http://localhost:5000/health', res => { console.log('Backend Status:', res.statusCode); }).on('error', err => console.log('Backend Error:', err.message));\"",
    "memory-check": "node -e \"console.log('Memory Usage:', Math.round(process.memoryUsage().heapUsed / 1024 / 1024) + 'MB');\"",
    "clean-restart": "taskkill /F /IM node.exe 2>NUL && timeout /t 2 >NUL && npm start",
    "diagnostic": "node diagnostic.js",
    "quick-fix": "node quick-fix.js"
  },
  "dependencies": {
    "@langchain/community": "^1.1.10",
    "@langchain/core": "^1.1.18",
    "@langchain/google-genai": "^2.1.14",
    "@langchain/openai": "^1.2.4",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.3",
    "langchain": "^1.2.16",
    "mongoose": "^7.6.3",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.7.0",
    "openai": "^4.104.0",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}